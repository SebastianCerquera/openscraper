{
  "name": "openscraper",
  "version": "0.0.1-development",
  "description": "This is a webscraper implemented as a chrome extension",
  "main": "index.js",
  "files": [
    "app",
    "cypress"
  ],
  "scripts": {
    "build": "npm run lint && npm run types",
    "start": "serve --listen ${PORT:-9090}",
    "dev": "npm start",
    "types": "tsc --noEmit",
    "test": "npm start & cypress run",
    "pretest": "npm run lint && npm run types",
    "lint": "eslint --fix cypress app/assets/js/scripts.js",
    "e2e": "cypress run",
    "e2e:chrome": "cypress run --browser chrome",
    "e2e:record": "cypress run --record",
    "e2e:record:chrome": "cypress run --record --browser chrome",
    "e2e:record:parallel": "cypress run --record --parallel",
    "cy:verify": "cypress verify",
    "cy:info": "cypress info",
    "cy:version": "cypress version",
    "cy:cache:list": "cypress cache list",
    "cy:run": "cypress run",
    "cy:run:record": "cypress run --record",
    "cy:open": "cypress open",
    "local:open": "start-test 8080 cy:open",
    "local:run": "start-test 8080 cy:run",
    "local:run:record": "start-test 8080 cy:run:record"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/SebastianCerquera/openscraper.git"
  },
  "author": "Sebastian Gonzalez Cerquera",
  "license": "Apache 2.0",
  "bugs": {
    "url": "https://github.com/SebastianCerquera/openscraper/issues"
  },
  "homepage": "https://github.com/SebastianCerquera/openscraper#readme",
  "dependencies": {
    "npm-run-all": "^4.1.2",
    "serve": "11.3.0"
  },
  "devDependencies": {
    "@cypress/eslint-plugin-dev": "5.0.0",
    "colon-names": "1.0.0",
    "cypress": "7.3.0",
    "eslint": "7.0.0",
    "eslint-plugin-cypress": "2.8.1",
    "eslint-plugin-json-format": "2.0.1",
    "eslint-plugin-mocha": "5.3.0",
    "execa": "2.0.5",
    "globby": "9.1.0",
    "husky": "1.3.1",
    "netlify-plugin-cypress": "2.0.0",
    "start-server-and-test": "1.10.6",
    "stop-build": "1.1.0",
    "typescript": "3.7.4",
    "requirejs": "2.3.6"
  },
  "engines": {
    "node": ">=12"
  }
}
